citHeader("To cite package 'secrlinear' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version", meta$Version)
url <- "https://CRAN.R-project.org/package=secrlinear/"

bibentry(
    bibtype = "Manual",
    title   = "secrlinear: Spatially Explicit Capture--Recapture for Linear Habitats",
    author  = c(person("Murray","Efford")),
    year    = year,
    note    = vers,
    url     = url,
    textVersion =
        paste("Efford, M. G. (", year,
        "). secrlinear: Spatially Explicit Capture--Recapture for Linear Habitats. ",
        vers, ". ", url, 
        sep = "")
)
